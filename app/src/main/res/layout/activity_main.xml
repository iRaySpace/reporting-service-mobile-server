<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="irayspacii.reportingserviceserver.MainActivity">

    <TextView
        android:id="@+id/ReportedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="Reported"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ReportedMainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReportedLabel"
        android:layout_centerHorizontal="true"
        android:text="Not Available"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/ReportedSubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReportedMainText"
        android:layout_centerHorizontal="true"
        android:text="Not Available"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/CoordinatesLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:orientation="horizontal"
        android:layout_below="@+id/ReportedSubText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/LatitudeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Latitude"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LongitudeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Longitude"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/CoordinatesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CoordinatesLabel"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/LatitudeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.000"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/LongitudeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.000"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/InformationLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/CoordinatesText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp">

        <TextView
            android:id="@+id/TimeTakenLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time Taken"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LocationProviderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Loc Provider"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/InformationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/InformationLabel"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TimeTakenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.000"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/LocationProviderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mobile"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ExtraInformationLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/InformationText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp">

        <TextView
            android:id="@+id/AccuracyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accuracy"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/LastReceivedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reported"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ExtraInformationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ExtraInformationLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/AccuracyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.000"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/LastReceivedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9AM"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/ServedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ExtraInformationText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Serving to"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ServedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ServedLabel"
        android:layout_centerHorizontal="true"
        android:text="127.0.0.1"
        android:textSize="30sp" />

</RelativeLayout>
